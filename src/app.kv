#:kivy 2.1.0

<MyLabel@Label>:
    color: 0,0,0,1


<MyPopUp@Popup>:
    message: message
    auto_dismiss: False
    size_hint: None, None
    title_align: 'center'
    width: grid.width + dp(25)
    height: grid.height + root.title_size + dp(48)
    
    GridLayout:
        id: grid
        size_hint: None, None
        size: self.minimum_size
        padding: [20, 10]
        spacing: 10
        cols: 1
        AnchorLayout:
            anchor_x: "center"
            anchor_y: "bottom"
            size_hint: None, None
            height: message.height
            width: max(message.width, butt.width)

            Label:
                id: message
                size_hint: None, None
                size: self.texture_size
                padding: [20, 10]

        AnchorLayout:
            anchor_x: "center"
            anchor_y: "bottom"
            size_hint: None, None
            height: butt.height
            width: max(message.width, butt.width)
            Button:
                id: butt
                text: "ok"
                size_hint: None, None
                size: self.texture_size
                padding: [10, 5]
                on_release: root.dismiss()
            
<MyProgressBarPopUp@Popup>:
    BoxLayout:
        orientation: "vertical"
        size: root.size
        id: blo

        ProgressBar:
            id: my_progress_bar
            value: 0
            min: 0
            max: 100
            pos_hint: {'x':1}
            size_hint_x: .8

<ScreenManagement>:
    transition: FadeTransition()
    MainWindow:
    MyPC:
    YouTube:
    AboutUs:
    

<MainWindow>:
    BoxLayout:
		size: root.width-100, root.height-100
        orientation:'vertical'
        spacing:10
            
        BoxLayout:
            orientation:'vertical'
            padding: 10
            size_hint: (1,.8)

            MyLabel:
                text: 'Hebrew Subtitles Maker'
                bold: True
                text_size:self.size
                halign:'center'
                valign:'bottom'
                font_size:'50sp'
                size: dp(40), dp(40)
            
            MyLabel:
                text: "Create a video file with herbew subtitles based on\nyour input file, and download it to your comupter.\n\nChoose from a YouTube link, or upload the file from you computer"
                text_size:self.size
                bold: True
                halign:'center'
                valign:'bottom'
                font_size:'20sp'
                size: dp(40), dp(40)


        BoxLayout:
            orientation: 'vertical'
            size_hint: (1,.7)

            BoxLayout:
                orientation: 'horizontal'
                spacing: 50
                padding: 50
                pos_hint: {"center": 0.5}

                Button:
                    text: 'YOUTUBE URL'
                    font_size:'25sp'
                    on_press: 
                        root.manager.current = 'YouTube'
                        root.manager.transition.direction = 'right'

                Button:
                    text: 'UPLOAD FROM PC'
                    font_size:'25sp'
                    on_press:
                        root.manager.current = 'MyPC'
                        root.manager.transition.direction = 'left'

        FloatLayout:
            size_hint: (1,.5)
            
            Button:
                text: 'About Us'
                font_size: 18
                size_hint: (0.2,0.3)
                pos_hint: {"x":0.4, "top": 0.6}
                on_press:
                    root.manager.current = 'AboutUs'
                    root.manager.transition.direction = 'up'

<YouTube>:
    url: url
    BoxLayout:
		size: root.width-100, root.height-100
        orientation:'vertical'
        spacing:10
          
        BoxLayout:
            orientation:'vertical'
            size_hint: (1,.7)

            MyLabel:
                text: '[b]Hebrew Subtitles Maker[/b]'
                markup:'True'
                text_size:self.size
                halign:'center'
                valign:'bottom'
                font_size:'50sp'
                size: dp(100), dp(40)
            
            MyLabel:
                text: "Create a video file with herbew subtitles based on\nyour input file, and download it to your comupter.\n\nPaste your YouTube link."
                text_size:self.size
                halign:'center'
                valign:'bottom'
                font_size:'20sp'
                bold: True
                size: dp(40), dp(40)

        BoxLayout:
            orientation: 'vertical'
            size_hint: (1,.6)
            
            BoxLayout:
                orientation: 'horizontal'
                padding: 10
                size_hint: (1,.5)

                MyLabel:
                    text: "URL"
                    bold: True
                    text_size: self.size
                    valign: 'bottom'
                    halign: 'center'
                    font_size:'25sp'
                    size_hint: .1, None
                    
                TextInput:
                    id: url
                    height: '40sp'
                    multiline: False
                    size_hint: .7,None
                    hint_text: 'Enter YouTube URL ...'
                    font_size:'20sp'
            
            BoxLayout:
                orientation: 'horizontal'
                padding: 10
                size_hint: (.25,.5)
                pos_hint: {"x":.375}

                Button:
                    text: 'SUBMIT'
                    font_size:'22sp'
                    size_hint: (.8,.9)
                    on_release: root.submit_url()
            
        FloatLayout:
            size_hint: (1,.3)

            Button:
                text: 'Back to menu'
                font_size:'20sp'
                size: dp(150), dp(50)
                pos_hint: {'y': 0.2, 'center_x': 0.5}
                size_hint: (None,None)
                on_press: 
                    root.manager.current = 'Main'
                    root.manager.transition.direction = 'left'

<MyPC>:
    BoxLayout:
		size: root.width-100, root.height-100
        orientation:'vertical'
        spacing:10

        BoxLayout:
            orientation:'vertical'
            padding: 10
            size_hint: (1,.7)

            MyLabel:
                text: '[b]Hebrew Subtitles Maker[/b]'
                markup:'True'
                text_size:self.size
                halign:'center'
                valign:'bottom'
                font_size:'50sp'
                size: dp(100), dp(40)
            
            MyLabel:
                text: "Create a video file with herbew subtitles based on\nyour input file, and download it to your comupter.\n\nUpload the file from you computer"
                text_size:self.size
                halign:'center'
                valign:'bottom'
                font_size:'20sp'
                bold: True
                size: dp(40), dp(40)

        BoxLayout:
            orientation: 'vertical'
            size_hint: (1,.8)
            
            BoxLayout:
                orientation: 'vertical'
                padding: 10
                spacing: 20
                
                Image:
                    source: 'images/upload_file.png'
                    allow_stretch: True
                    keep_ratio: True
                    size_hint: None,None
                    pos_hint: {'center_x': 0.5,'y':0}
                            
                MyLabel:
                    text: '[b] Drag & Drop file\nOr [/b]'
                    markup:'True'
                    height: '40sp'
                    multiline: False
                    size_hint: (.2,None)
                    pos_hint: {'center_x': 0.5}
                    font_size:'22sp'
                    halign: 'center'
            
            Button:
                text: 'BROWSE'
                font_size:'22sp'
                size: dp(170), dp(60)
                pos_hint: {'y': 0.6, 'center_x': 0.5}
                size_hint: (None,None)
                on_release: root.show_load_list()
        
        FloatLayout:
            size_hint: (1,.3)
        
            Button:
                text: 'Back to menu'
                font_size:'20sp'
                size: dp(150), dp(50)
                pos_hint: {'y': 0.2, 'center_x': 0.5}
                size_hint: (None,None)
                on_press:
                    root.manager.transition.direction = 'right'
                    root.manager.current = 'Main'

<AboutUs>:
    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'vertical'
            size_hint: (1,.6)

            MyLabel:
                text: 'Hebrew Subtitles Maker'
                bold:True
                text_size: self.size
                halign:'center'
                valign:'bottom'
                font_size:'50sp'
                size: dp(100), dp(40)

            Label:
                text: 'About Us'
                font_size:'40sp'
                bold: True
                color:0,0,0,1
        
        Label:
            font_size:'20sp'
            text: root.aboutUsText
            halign: "center"
            italic: True
            bold: True
            color:0,0,0,1

        FloatLayout:
            size_hint: (1,.2)

            Button:
                text: 'Back to menu'
                font_size:'20sp'
                size: dp(150), dp(50)
                pos_hint: {'y': 0.2, 'center_x': 0.5}
                size_hint: (None,None)
                on_press: 
                    root.manager.current = 'Main'
                    root.manager.transition.direction = 'down'

<LoadFileChooser>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            path: '././'
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()
            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)

<UrlPopup>:
    title: 'YouTube Video Downloader'
    size_hint: .76, .5
    height: "450dp"

    BoxLayout:
        orientation: "vertical"

        Label:
            text: root.url_input
            size_hint_y: None
            height: "64dp"
            font_size: "16sp"

        ProgressBar:
            pos_hint: {"center_x" : 0.5}
            value: root.progress_value
            max: 100
            

        Label:
            id: progress_label
            text: "Downloading file...{}%".format(root.progress_value) if root.has_started else ""

        BoxLayout:
            size_hint_y: None
            height: dp(48)

            Button:
                text: 'Download'
                on_release: root.download()

            Button:
                text: 'Close'
                on_press: 
                    root.dismiss()